extends includes/layout

block content 
    form(action="/post/upload" method="post")
        input(type="hidden" name="_csrf" value=csrfToken)
        input(type="text" name="title" placeholder="한 줄로 표현해보세요")
        textarea(name="description" placeholder="세부내용")
        select(name="category")
            option(value="자유") 자유
            option(value="질문") 질문
            option(value="공유") 공유
            option(value="리뷰") 리뷰
            option(value="사진") 사진
            option(value="Flex") Flex
        input(type="submit" value="생성")