extends includes/layout

block content
    .container
        form(action=`/gym/${gym._id}/update` method="post" enctype="multipart/form-data").uploadContainer
            input(type="hidden" name="_csrf" value=csrfToken)
            input(type="hidden" name="location" value=gym.location)
            input(type="hidden" name="address" value=gym.address)
            each photo in gym.photos
                img(src=`/${photo}` class="originalPreview" hidden)
            .flexContainer
                .flexContainer__item
                    span 이름
                .flexContainer__item
                    input(type="text" name="name" placeholder="이름" value=gym.name)
            .flexContainer
                .flexContainer__item
                    span 타이틀
                .flexContainer__item
                    input(type="text" name="title" placeholder="한 줄로 표현해보세요" value=gym.title)
            .flexContainer
                .flexContainer__item
                    span 설명
                .flexContainer__item
                    textarea(name="description" placeholder="세부내용")=gym.description
            .flexContainer
                .flexContainer__item
                    span 주소
                .flexContainer__item
                    #searchAddressBtn.btn.primary 주소검색
                    #kakaoMap
                    #result
            .flexContainer
                .flexContainer__item
                    span 사진
                .flexContainer__item
                    .btn.primary#fakeFileBtn
                        i.fa-solid.fa-camera
                    input(type="file" name="photos" multiple)
                    #preview
            
            input(type="submit" value="수정")

    script(type="text/javascript" src="https://cdn.jsdelivr.net/npm/browser-image-compression@1.0.15/dist/browser-image-compression.js")

    script(src="/static/js/daumAddress.js")
    script(src="/static/js/imageCompress.js")

    
        
    
