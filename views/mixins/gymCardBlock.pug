mixin gymCardBlock(gym={})
    .gymCard
        a(href=`/gym/${gym._id}` target="_blank").gymCard
            img(src=`/${gym.thumbnail}`)
            h3=gym.name
            h4=gym.title
            h4 댓글수:#{gym.totalComment}
            h4 좋아요수:#{gym.totalLike}
        if gym.isLike
            .likeBtn.fa-solid.fa-heart.like(id=`${gym._id}`)
        else
            .likeBtn.fa-regular.fa-heart(id=`${gym._id}`)
