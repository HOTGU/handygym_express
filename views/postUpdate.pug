extends includes/layout

block content 
    form(action=`/post/${post._id}/update` method="post").narrowContainer.uploadContainer.box
        input(type="hidden" name="_csrf" value=csrfToken)
        h3.uploadHead 게시물 업데이트
        .uploadColumn
            .uploadColumn__item 
                span 제목
            .uploadColumn__item 
                input(type="text" name="title" placeholder="한 줄로 표현해보세요" value=post.title)
        .uploadColumn
            .uploadColumn__item 
                span 세부내용
            .uploadColumn__item 
                textarea(name="description" placeholder="세부내용")=post.description
        .uploadColumn
            .uploadColumn__item 
                span 카테고리
            .uploadColumn__item
                select(name="category")
                    - let i = 0;
                    - const arr = ["자유","질문","공유","리뷰","Flex"]
                    while i < arr.length
                        option(value=arr[i] selected=(arr[i] === post.category ? true : undefined))=arr[i]
                        - i++
        
       
        input(type="submit" value="업데이트")
    